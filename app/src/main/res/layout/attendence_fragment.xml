<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        android:backgroundTint="#E6E6E6"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/admin"
        android:layout_margin="8dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@id/admin_img"
            android:layout_centerVertical="true"
            android:src="@drawable/admin_img"/>
        <TextView
            android:id="@+id/admin_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Admin"
            android:textAlignment="center"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="0dp"
            android:textColor="#610B21"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/admin_img"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        android:backgroundTint="#E6E6E6"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/faculty"
        android:layout_margin="8dp"
        android:layout_weight="1">

        <ImageView
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:id="@+id/faculty_img"
            android:layout_centerVertical="true"
            android:src="@drawable/faculty_img"/>
        <TextView
            android:id="@+id/faculty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Faculty"
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:layout_marginTop="35dp"
            android:textColor="#610B21"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/faculty_img"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        android:backgroundTint="#E6E6E6"
        android:layout_marginBottom="5dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:id="@+id/students"
        android:layout_margin="8dp"
        android:layout_weight="1">

        <ImageView
            android:id="@id/students_img"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:src="@drawable/students_img" />
        <TextView
            android:id="@+id/students_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Students"
            android:textAlignment="center"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="0dp"
            android:textColor="#610B21"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/students_img"/>

    </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>