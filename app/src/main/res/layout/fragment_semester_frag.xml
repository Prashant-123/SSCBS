<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#d02d06">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10dp"
            ></LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sem1_bfia"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Semester 1 "
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:textSize="18dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="8.5"
                android:background="#ffffff"
                ></LinearLayout>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sem2_bfia"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Semester 2"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:textSize="18dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="7"
                android:background="#ffffff"
                ></LinearLayout>


            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sem3_bfia"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Semester 3 "
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:textSize="18dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="8"
                android:background="#ffffff"
                ></LinearLayout>


            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sem4_bfia"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Semester 4 "
                android:layout_marginLeft="20dp"
                android:layout_weight="1"
                android:textSize="18dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="8.5"
                android:background="#ffffff"
                ></LinearLayout>


            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sem5_bfia"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Semester 5 "
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:textSize="18dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="8.5"
                android:background="#ffffff"
                ></LinearLayout>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/sem6_bfia"
                android:layout_width="0dp"
                android:layout_height="35dp"
                android:text="Semester 6 "
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:textSize="18dp"
                android:gravity="left"
                android:textStyle="bold"
                android:textColor="#ffffff"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_weight="8.5"
                android:background="#ffffff"
                ></LinearLayout>

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="match_parent"></LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"></LinearLayout>

    </LinearLayout>
</ScrollView>