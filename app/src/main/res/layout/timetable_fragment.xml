<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#E6E6E6"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp">
        <ImageView
            android:id="@+id/image_timetable"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/tt" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:id="@+id/text_course"
                android:textSize="18dp"
                android:layout_marginBottom="10dp"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="#610B21">
        </LinearLayout>

            <TextView
                android:id="@+id/tt_text"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="TIME TABLE"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="bold" />

        <ProgressBar
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:id="@+id/progress_br"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <info.hoang8f.widget.FButton
                android:id="@+id/teachers_card"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="28dp"
                android:textColor="@color/white"
                fbutton:buttonColor="#610B21"
                android:text="Teacher's TimeTable"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="28dp" />

            <info.hoang8f.widget.FButton
                android:id="@+id/students_card"
                android:layout_width="150dp"
                android:layout_height="90dp"
                android:textColor="@color/white"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="27dp"
                fbutton:buttonColor="#610B21"
                android:textAlignment="center"
                android:text="Student's TimeTable"
                android:layout_alignParentRight="true"
                android:layout_marginRight="27dp" />

        </RelativeLayout>
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>